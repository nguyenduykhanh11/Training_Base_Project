<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/shape_line_item"
        android:layout_width="match_parent"
        android:layerType="software"
        android:layout_marginTop="-1dp"
        android:layout_height="2dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:paddingStart="@dimen/margin_10_dp"
        android:paddingBottom="@dimen/content_padding_8_dp"
        android:textSize="@dimen/textsize_16_sp"
        android:paddingTop="@dimen/content_padding_10_dp"
        android:textColor="@color/md_black_1000"
        android:fontFamily="@font/roboto_regular"
        android:background="@color/md_white_1000"
        android:id="@+id/tv_select_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
