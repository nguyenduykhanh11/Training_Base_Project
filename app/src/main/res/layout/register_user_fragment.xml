<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register_gray">

    <FrameLayout
        android:id="@+id/fl_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/shape_bg_image_register_user" />

        <ImageView
            android:layout_width="108.9dp"
            android:layout_height="183dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="41dp"
            android:src="@drawable/tiger" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30_dp"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginEnd="@dimen/margin_30_dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/fl_header_layout">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_46_dp"
            app:boxCornerRadiusBottomEnd="@dimen/radius_22_5_dp"
            app:boxCornerRadiusBottomStart="@dimen/radius_22_5_dp"
            app:boxCornerRadiusTopEnd="@dimen/radius_22_5_dp"
            app:boxCornerRadiusTopStart="@dimen/radius_22_5_dp"
            app:boxStrokeColor="@color/textinput_default_box_stroke_color"
            app:startIconDrawable="@drawable/vector_account"
            app:startIconTint="@color/bg_register_yellow_center">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_46_dp"
            android:layout_marginTop="@dimen/margin_14_dp"
            app:boxCornerRadiusBottomEnd="@dimen/radius_22_5_dp"
            app:boxCornerRadiusBottomStart="@dimen/radius_22_5_dp"
            app:boxCornerRadiusTopEnd="@dimen/radius_22_5_dp"
            app:boxCornerRadiusTopStart="@dimen/radius_22_5_dp"
            app:boxStrokeColor="@color/textinput_default_box_stroke_color"
            app:startIconDrawable="@drawable/vector_password"
            app:endIconMode="password_toggle"
            app:startIconTint="@color/bg_register_yellow_center">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_46_dp"
            android:layout_marginTop="@dimen/margin_14_dp"
            app:boxCornerRadiusBottomEnd="@dimen/radius_22_5_dp"
            app:boxCornerRadiusBottomStart="@dimen/radius_22_5_dp"
            app:boxCornerRadiusTopEnd="@dimen/radius_22_5_dp"
            app:boxCornerRadiusTopStart="@dimen/radius_22_5_dp"
            app:boxStrokeColor="@color/textinput_default_box_stroke_color"
            app:startIconDrawable="@drawable/vector_password"
            app:endIconMode="password_toggle"
            app:startIconTint="@color/bg_register_yellow_center">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>